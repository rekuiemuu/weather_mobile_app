<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_today">

    <fragment
        android:id="@+id/navigation_today"
        android:name="com.example.weather_app.ui.today.TodayFragment"
        android:label=""
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_weekly"
        android:name="com.example.weather_app.ui.weekly.WeeklyFragment"
        android:label=""
        tools:layout="@layout/fragment_weekly" />

    <fragment
        android:id="@+id/navigation_share"
        android:name="com.example.weather_app.ui.today.TodayFragment"
        android:label=""
        tools:layout=""/>
    <!-- Добавьте эти два: -->
    <fragment
        android:id="@+id/settings"
        android:name="com.example.weather_app.ui.settings.SettingsFragment"
        android:label="@string/settings" />

    <fragment
        android:id="@+id/about"
        android:name="com.example.weather_app.ui.settings.AboutFragment"
        android:label="@string/about" />

    <!-- Новые фрагменты для аутентификации -->

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.weather_app.auth.ProfileFragment"
        android:label="Профиль" />


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.weather_app.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.weather_app.auth.RegisterFragment"
        android:label="Register" />

</navigation>